@using BabyFoodApp.Models.User
@model List<UserViewModel>

@{
    ViewBag.Title = "All Users";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />

@if (!Model.Any())
{
    <h2 class="text-center">There are no users subscribed for the moment!</h2>
}

<span>Total count of users: @Model.Count</span>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Email</td>
            <td>Id</td>            
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Id</td>
                <td><button type="button" class="btn btn-warning"><a asp-action="UserDetails" asp-controller="Administrator" asp-route-id="@user.Id">Details</a></button></td>
            </tr>

        }
    </tbody>
</table>