@model ArticleViewModel

@{
    ViewBag.Title = "Write New Article";
}

<h1 class="text-center">@ViewBag.Title</h1>


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-controller="blog" asp-action="create" method="post">
            <div class="form-floating">
                <input asp-for="@Model.Title" class="form-control" aria-required="true" />
                <label asp-for="@Model.Title"></label>
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <textarea asp-for="@Model.Content" class="form-control" aria-required="true"></textarea>
                <label asp-for="@Model.Content"></label>
                <span asp-validation-for="@Model.Content" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Publish</button>
        </form>
    </div>
</div>

