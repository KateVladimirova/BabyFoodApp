@using BabyFoodApp.Data.Enums

@model AddViewModel

@{
    ViewBag.Title = "Add New Recipe";
}

<h1 class="text-center">@ViewBag.Title</h1>


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-controller="recipe" asp-action="add" method="post">
            <div class="form-floating">
                <input asp-for="@Model.Name" class="form-control" aria-required="true"/>
                <label asp-for="@Model.Name"></label>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div> 
            <div class="form-floating">
                <input asp-for="@Model.CookingTime" class="form-control" aria-required="true" />
                <label asp-for="@Model.CookingTime"></label>
                <span asp-validation-for="@Model.CookingTime" class="text-danger"></span>
            </div> 
            <div class="form-floating">
                <input asp-for="@Model.PreparationTime" class="form-control" aria-required="true" />
                <label asp-for="@Model.PreparationTime"></label>
                <span asp-validation-for="@Model.PreparationTime" class="text-danger"></span>
            </div> 
            <div class="form-floating">
                <input asp-for="@Model.TotalTime" class="form-control" aria-required="true" />
                <label asp-for="@Model.TotalTime"></label>
                <span asp-validation-for="@Model.TotalTime" class="text-danger"></span>
            </div>
            <div class="form-floating">
                @Html.DropDownListFor(m => m.ChildAge, new SelectList(Enum.GetValues(typeof(Age))),"Select Age")
                
            </div>
            <div class="form-floating">
                @Html.DropDownListFor(m => m.Category, new SelectList(Enum.GetValues(typeof(Category))),"Select Category")
            </div>
            <div class="form-floating">
                <input asp-for="@Model.ImageUrl" class="form-control" aria-required="true" />
                <label asp-for="@Model.ImageUrl"></label>
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.Ingredients" class="form-control" aria-required="true" />
                <label asp-for="@Model.Ingredients"></label>
                <span asp-validation-for="@Model.Ingredients" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true"></textarea>
                <label asp-for="@Model.Description"></label>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>

            
            <button type="submit" class="w-100 btn btn-lg btn-primary">Add</button>
        </form>
    </div>
</div>
