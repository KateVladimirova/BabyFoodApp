@model List<MineViewModel>

@{
    ViewBag.Title = "My Recipes";
}

<h1 class="text-center">@ViewBag.Title</h1>

@if (Model.Count == 0)
{
    <h2 class="text-center">You have no recipes added for the moment!</h2>

    <button type="button" class="w-100 btn btn-dark"><a asp-controller="Recipe" asp-action="Add">Add New Recipe</a></button>
}

@foreach (var item in Model)
{
    <a asp-action="Details" asp-controller="Recipe" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
    <a asp-action="Details" asp-controller="Recipe" asp-route-id="@item.Id"><img style="width: auto; height: 100px" src="@Html.DisplayFor(modelItem => item.ImageUrl)"></a>
}
